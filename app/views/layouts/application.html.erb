<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Notifier</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <script src="/jquery-3.3.1.min.js" integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT"></script>
    <script src="/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa"></script>
    <link rel="stylesheet" href="/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" />
    <link rel="stylesheet" href="/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" />
    <%= render "layouts/header" %>
    <% flash.each do |key, value| %>
      <div class="<%= bootstrap_flash_class(key) %>">
        <%= content_tag(:button, 'x', class: "close", data: { dismiss: 'alert' }) %>
        <%= value %>
      </div>
    <% end %>
    <%= yield %>
    <%= render "layouts/footer" %>
  </body>
</html>
